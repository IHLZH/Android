<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical">

    <Button
        android:id="@+id/btn_getBaidu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Get访问百度"/>
    <Button
        android:id="@+id/btn_postForm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Post上传表单"/>
    <Button
        android:id="@+id/btn_postJson"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Post上传json"/>
    <Button
        android:id="@+id/btn_upImg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Post上传文件"/>
    <Button
        android:id="@+id/btn_downImg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="下载文件"/>
    <TextView
        android:id="@+id/tv_result"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <ImageView
        android:id="@+id/img_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>


</LinearLayout>